<%= render :partial => 'shared/mylib_menu' %>
<div id="content" class="col-md-9">

  <h3><%=t('toshokan.mylibrary.menu.tags')%></h3>

  <% if(@tags.empty?) %>
    <div class="alert alert-info">
      <%= t('toshokan.tags.none') %>
    </div>
  <% else %>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Tag</th>
          <th class="action"><%= t('toshokan.mylibrary.edit') %></th>
          <th class="action"><%= t('toshokan.mylibrary.delete') %></th>
        </tr>
      </thead>
      <% @tags.each do |tag| %>
        <tr class='tag-manager'>
          <td><span class="label label-important"><%= tag.name %></span></td>
          <td class="action">
            <%= link_to edit_tag_path(tag), :title => t('toshokan.mylibrary.edit') do %>
              <i class="icon-edit"></i>
            <% end %>
          </td>
          <td class="action">
            <%= link_to tag_path(tag, :return_url => request.url), :method => :delete, :title => t('toshokan.mylibrary.delete') do %>
              <i class="icon-times"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
