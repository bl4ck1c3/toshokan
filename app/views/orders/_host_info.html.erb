<div class="host">
  In
  <span class="title"><%= assistance_request.host_title %></span>
  <% case %>
  <% when ['volume', 'issue', 'year', 'pages'].none? {|field| assistance_request.send("host_#{field}").blank?} %>
    &mdash; <%= assistance_request.host_volume %> (<%= assistance_request.host_issue %>), <%= assistance_request.host_year %>, p. <%= assistance_request.host_pages %>
  <% when ['volume', 'year', 'pages'].none? {|field| assistance_request.send("host_#{field}").blank?} %>
    &mdash; <%= assistance_request.host_volume %>, <%= assistance_request.host_year %>, p. <%= assistance_request.host_pages %>
  <% end %>
  <% unless assistance_request.host_isxn.blank? %>
    <div>ISSN or ISBN: <%= assistance_request.host_isxn %></div>
  <% end %>
</div>
