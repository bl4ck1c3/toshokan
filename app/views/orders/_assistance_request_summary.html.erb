<dl>
  <dt>Created</dt>
  <dd><tt><%= l assistance_request.created_at.to_date, :format => :long %></tt></dd>
  <% unless assistance_request.auto_cancel.blank? || assistance_request.auto_cancel == 'never' %>
    <dt>Last date of interest</dt>
    <dd>
      <tt>
        <%= l (assistance_request.created_at.to_date + (assistance_request.auto_cancel.to_i / 30).months), :format => :long %> 
        (<%= t "toshokan.assistance_requests.forms.sections.automatic_cancellation.values.#{assistance_request.auto_cancel}" %>)
      </tt>
    </dd>
  <% end %>
  <dt>Electronic delivery</dt>
  <dd><tt><%= assistance_request.email %></tt></dd>
  <% unless assistance_request.physical_delivery.blank? %>
    <dt>Physical delivery</dt>
    <dd>
      <% if assistance_request.physical_delivery == 'internal_mail' %>
        <tt><%= render_user_address(assistance_request.user) %></tt>
      <% else %>
        <tt><%= t "toshokan.assistance_requests.forms.sections.physical_delivery.values.#{assistance_request.physical_delivery}" %></tt>
      <% end %>
    </dd>
  <% end %>
  <% if assistance_request.notes %>
    <dt>Your notes</dt>
    <dd><tt><%= assistance_request.notes %></tt></dd>
  <% end %>
</dl>
