<div class="col-md-12">
  <div class="order">
    <div class="header">
      <%= render_order_steps @order.flow %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="info">
          <%= t "toshokan.orders.text.#{@order.supplier}_html" %>
        </div>
        <%= t 'toshokan.orders.receipt_html', :status_link => @order_status_url %>
        <p><%= link_back_to_catalog %></p>
      </div>
      <div class="col-md-6">
        <%= render 'order_summary' %>
      </div>
    </div>
  </div>
</div>
