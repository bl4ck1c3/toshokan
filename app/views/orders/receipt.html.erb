<div class="span12">
  <div class="order">
    <div class="header">
      <%= render_order_steps @order.flow %>
    </div>
    <div class="row">
      <div class="span6">
        <div class="info">
          <%= t "toshokan.orders.text.#{@order.supplier}_html" %>
        </div>
        <%= t 'toshokan.orders.receipt_html', :status_link => order_status_url(@order.uuid), :search_link => @order_return_url %>
      </div>
      <div class="span6">
        <%= render 'order_summary' %>
      </div>
    </div>
  </div>
</div>
