  |
  <%= link_to 'Login', new_user_session_path(:return_url => u(request.url)) %>
<% elsif can? :login_velo, User %>
  |
  <%= link_to 'Login', new_user_session_path(:return_url => u(request.url)) %>
<% elsif can? :logout_cas, User %>
  |
  <%= link_to 'Logout', destroy_user_session_path %>
<% elsif can? :logout_velo, User %>
  |
  <%= link_to 'Logout', destroy_user_session_path %>
<% end %>
