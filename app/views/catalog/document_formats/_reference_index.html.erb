<div class="media">
  <div class="pull-right hidden-phone">
    <%= render_cover_image document %>
  </div>
  <div class="media-body">
    <% if document['journal_title_s'] %>
      <div class="journal_information">
        <div class="journal_title">
          <%= document['journal_title_s'].first %>
        </div>
        <% if document['journal_vol_s'] || document['journal_issue_s'] || document['pub_date_ti'] || document['journal_page_s'] %>
          &mdash;
        <% end %>
        <%= render_journal_info document %>
      </div>
    <% end %>
    <% if document['author_t'] %>
      <div class="authors">
        <%= document['author_t'].collect { |author| link_to author, root_path(:search_field => 'author', :q => author) }.join(', ').html_safe %>
      </div>
    <% end %>
    <p class="abstract"><%= render_abstract_snippet document %></p>
    <% if document['doi_s'] %>
      <div class="doi">DOI: <%= link_to document['doi_s'].first, "http://redirect.cvt.dk/?url=#{u('http://dx.doi.org/' + document['doi_s'].first)}" %></div>
    <% end %>
  </div>
</div>
