<% # main container for facets/limits menu -%>
<div id="facets" class="facets sidenav">


  <h4 data-toggle="collapse" data-target=".facets-collapse">

      <a class="btn btn-navbar">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </a>
        <%= t('blacklight.search.facets.title') %>

  </h4>
  <div class="facets-collapse">
  <%= render_facet_partials %>
  <% if can? :logout, User %>
    <%= render_tag_partials %>
  <% end %>
  </div>
</div>


<% if can? :logout, User %>
  <div id="mylibrary" class="mylibrary sidenav">

    <h4 data-toggle="collapse" data-target=".mylibrary-collapse">
          <%= t('toshokan.mylibrary.title') %>
    </h4>
    <div class="mylibrary-collapse">
      <ul>
        <li><%= link_to t('toshokan.tags.manage'), :controller => "tags" %></li>
      </ul>
    </div>
  </div>
<% end %>

