<% # main container for facets/limits menu -%>
<div id="facets" class="facets sidenav">

  <div class="facets-collapse">
  <%= render_facet_partials %>
  <hr/>
  <% if can? :logout, User %>
    <%= render_tag_partials %>
  <% end %>
  <% if can? :use_feature, :cant_find_facet %>
    <% if can? :view, :cant_find_forms %>
      <hr>
      <%= render 'cant_find/search_menu_items' %>
    <% end %>
  <% end %>
  </div>
</div>
