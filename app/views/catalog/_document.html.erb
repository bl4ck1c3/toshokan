<% # container for a single doc -%>
<% present(document) do |document_presenter| %>
    <div class="document <%= render_document_class document %>" itemscope itemtype="<%= document.itemtype %>">
      <%= render_document_partials document, blacklight_config.view_config(document_index_view_type).partials, :document_counter => document_counter, document_presenter: document_presenter %>
    </div>
<% end %>
