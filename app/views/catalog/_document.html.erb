<% # container for a single doc -%>
<div class="document <%= render_document_class document %>">

  <%= render :partial => 'document_header', :locals => { :document => document, :document_counter => document_counter } %>

  <% # @display_format defaults to 'standard' - see CatalogController#index and CatalogController#show %>
  <%= render :partial => "document_format_#{@display_format}", :locals => { :document => document, :document_counter => document_counter } %>
</div>
