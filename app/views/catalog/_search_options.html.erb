<table id="search-options" class="table hide table-hover">
  <tbody>
    <% if (can? :view, :search_history) && (!@search_history.nil?) && (@search_history.length > 0) && !params[:q].blank? %>
      <tr class="search-history-links">
        <td>
          <span>
            <i class="icon-star-empty"></i>                  
            <%= link_to save_search_path(@search_history.first.id), :method => :put, 
            :title => t('toshokan.mylibrary.save'), :id => "search-summary-save", :remote => true do %>
               <%= t('toshokan.mylibrary.save') %>
            <%- end -%>
          </span>
          <span>
            <i class="icon-bell"></i>
            <%= link_to save_search_alert_path(@search_history.first.id), :method => :put, :title => t('toshokan.mylibrary.alert'), :id => "search-summary-alert", :remote => true do %>
              <%= t('toshokan.mylibrary.alert') %>
            <%- end -%>
          </span>
        </td>
      </tr>
    <%- end -%>    
    <tr class="search_history">
      <td class="bordered"><i class="icon-time"></i> <b>Recent History:</b></td>
    </tr>
    <% @search_history.each do |entry| %>      
      <tr class="search_history">
        <td class="entry">
          <%= link_to_search_history_item(entry.query_params, "<i class='icon-search invisible'></i>") %>
        </td>
      </tr>
    <%- end -%>
    <% if can? :view, :search_history %>
      <tr class="search-history-links">
        <td class="bordered">
          <i class="icon-time"></i> <%= link_to "Complete history", search_history_path %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
