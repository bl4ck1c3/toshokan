<div class="well tools" id="fulltext_tools">
  <%= render :partial => 'show_fulltext' %>
</div><!--/well -->

<% if params[:resolve].blank? %>
  <% if @document[:format] == 'journal' %>
    <%= render 'show_alert_tools' %>
    <%= render 'show_journal_rank_tools' %>
    </div>
  <% else %>
    <% if render_metrics? @document %>
      <%= render 'show_metrics' %>
    <% end %>
    <%= render 'show_export_tools' %>
  <% end %>
<% end %>
