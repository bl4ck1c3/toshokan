  <ul id="fulltext" class="nav nav-list">
    <li class="nav-header fulltext-header"><%= t('toshokan.tools.fulltext') %></li>

    <% if can? :order, :article %>
      <li class="order-rd-scan order-scan hide">
        <%= render :partial => 'order_scan_form', :locals => { :supplier => :rd, :open_url => @document.export_as_openurl_ctx_kev, :index => false } %>
      </li>
      <li class="order-dtu-scan order-scan hide">
        <%= render :partial => 'order_scan_form', :locals => { :supplier => :dtu, :open_url => @document.export_as_openurl_ctx_kev, :index => false } %>
      </li>
    <% end %>
    
    <% show = (@document['pubmed_url_ssf'] || @document['isi_url_ssf'] || @document['orbit_id_ssf']) %>
    <%= content_tag :li, t('toshokan.availability.other'), class: "nav-header other-header #{'hide' if !show}" -%>
    
    <% if(@document['pubmed_url_ssf']) %>
      <li><%=link_to "<i class='icon-pubmed'></i> #{t('toshokan.source_url.pubmed')}".html_safe, "#{@document['pubmed_url_ssf'].first}" %></li>
    <% end %>
    <% if(@document['isi_url_ssf']) %>
      <li><%=link_to "<i class='icon-isi'></i> #{t('toshokan.source_url.isi')}".html_safe, "#{@document['isi_url_ssf'].first}" %></li>
    <% end %>
    <% if(@document['orbit_id_ssf']) %>
      <li>
        <%=link_to "<i class='icon-dtu'></i> #{t('toshokan.source_url.orbit')}".html_safe, Rails.application.config.orbit_url % "#{@document['orbit_id_ssf'].first}" %>
      </li>
    <% end %>
  </ul>
